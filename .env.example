# .env
ENV_NAME=local

# Настройки парсера книг
BOOK_PARSER_KNOW_MAP_PATH=data/knowledge_maps/goldsmith/know_map_full.json
BOOK_PARSER_KNIGA_PATH=data/row/goldsmith/kniga_full_content.json
